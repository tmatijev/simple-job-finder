{
  "manifest_version": 3,
  "name": "Simple Job Finder",
  "version": "1.0.0",
  "description": "Search for remote tech jobs across multiple job boards",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "tabs"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 